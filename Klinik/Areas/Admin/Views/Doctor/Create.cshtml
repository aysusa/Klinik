@using Klinik.Models
@model Doctor;
<form asp-area="Admin" asp-controller="Doctor" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
            <label asp-for="ImgUpload" class="form-label"></label>
            <input class="form-control" asp-for="ImgUpload" id="formFile">
        <span asp-validation-for="ImgUpload" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <input asp-for="DepartmentId" class="form-control" />
        <span asp-validation-for="DepartmentId" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Department.Title"></label>
        <input asp-for="Department.Title" class="form-control" />
        <span asp-validation-for="Department.Title" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
